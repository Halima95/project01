
  <div class="row">
  <div class="col s3">
<h2> 
<%= @city.name %>
</h2>

<h4> 
Places to go :
</h4>

<% @city.places.each do |place|%>
<p>
<%= link_to  place.name, place_path(place) %>
</p>
<% end %>


<h4 class="align">Things to do :</h4>

<% @city.activities.each do |activity|%>
<p>
<%= link_to  activity.type_of, activity_path(activity), class:"align1" %>
</p>
<% end %>



